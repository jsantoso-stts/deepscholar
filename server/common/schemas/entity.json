{
    "title": "deepscholar json-schema for entity",
    "type": "object",
    "patternProperties": {
        "^.+$": {
            "oneOf": [
                { "type": "string" },
                {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "value": { "type": ["number", "string"] },
                            "reference": { "type": "string" },
                            "pdfanno": { "type": "string" }
                        },
                        "required": ["value"]
                    }
                }
            ]
        }
    },
    "required": ["id", "title", "description"],
}
